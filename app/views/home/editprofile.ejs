<h1>Edit my Profile</h1>

<form method="POST" action="/profile/edit">
	<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
	<dl class="form">
		<dt>
			<label for="username">User name</label>
		</dt>
		<dd>
			<div class="field">
				<input type="text" name="username" value="<%= user.local.username %>">
			</div>
		</dd>

		<dt>
			<label for="email">Email</label>
		</dt>

		<dd>
			<div class="field">
				<input type="email" name="email" value="<%= user.local.email %>">
			</div>
		</dd>

		<dt>
			<h3>Current Profile Picture:</h3><br>
			<img src= "/static/<%= user.local.imgPath %>"><br>
			<h3>All Picture</h3>
		<div>
			<input type="radio" name="profilePic" value="1"> <img src= "/static/profile1.png"><br>
  		<input type="radio" name="profilePic" value="2"> <img src= "/static/profile2.png"><br>
  		<input type="radio" name="profilePic" value="3"> <img src= "/static/profile3.png"><br>
			<input type="radio" name="profilePic" value="4"> <img src= "/static/profile4.png"><br>
		</div>

		</dt>
		<dd>

		</dd>
	</dl>

	<input type="submit" value="Update">
</form>
